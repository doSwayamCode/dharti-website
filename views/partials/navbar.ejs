<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="/css/navbar.css">

<nav class="navbar navbar-expand-sm navbar-dark fixed-top custom-nav">

  <div class="container">
    <!-- Logo on the left -->
    <a class="navbar-brand" href="/">
      <img src="/dif_logo.webp" alt="NGO Logo" height="70" class="d-inline-block align-top">
    </a>
    
    <!-- Mobile toggle button -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    
    <!-- Navbar items -->
    <div class="collapse navbar-collapse" id="mainNavbar">
      <ul class="navbar-nav ms-auto mb-lg-0 text-center">
        <% navbarItems.forEach(item => { 
          const isActive = currentPath === item.titleLink || 
                         (item.subItems && item.subItems.some(sub => currentPath === sub.titleLink));
        %>
          <% if (item.titleLink === "/donate") { %>
            <li class="nav-item ms-lg-2">
              <a class="nav-link donate-btn py-2 rounded <%= currentPath === item.titleLink ? 'active' : '' %>" href="<%= item.titleLink %>">
                <%= item.title %>
              </a>
            </li>
          <% } else if (item.subItems && item.subItems.length > 0) { %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle px-3 <%= isActive ? 'active' : '' %>" href="<%= item.titleLink %>" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <%= item.title %>
              </a>
              <ul class="dropdown-menu dropdown-menu-end">
                <% item.subItems.forEach(sub => { %>
                  <li>
                    <a class="dropdown-item <%= currentPath === sub.titleLink ? 'active' : '' %>" href="<%= sub.titleLink %>">
                      <%= sub.title %>
                    </a>
                  </li>
                <% }); %>
              </ul>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link <%= currentPath === item.titleLink ? 'active' : '' %>" href="<%= item.titleLink %>">
                <%= item.title %>
              </a>
            </li>
          <% } %>
        <% }); %>
      </ul>
    </div>
  </div>
</nav>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<!-- Add padding to body to account for fixed navbar -->
<style>
  body { 
    padding-top: 80px; 
  }
  @media (max-width: 576px) {
    body {
      padding-top: 80px;
    }
  }
</style>